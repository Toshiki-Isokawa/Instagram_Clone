<div>
    <%= form_with(model: @post, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
            <div>
                <%= f.file_field :image %>
            </div>
            <div>
                <%= f.text_area :title, :placeholder =>"タイトルを入力", class: 'form-control',rows: 1 %>
            </div>
            <div>
                <%= f.text_area :content, :placeholder =>"内容を入力", class: 'form-control', rows: 5 %>
            </div>
            <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
    <div>
        <%= link_to 'ホーム', root_url %>
    </div>
</div>