<% posts.each do |post| %>
    <%= image_tag(post.user, :width =>'50', :height =>'50') %>
    <div>
        <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
    </div>
    <div>
        <p><%= link_to post.title, post_path(post.id) %></p>
    </div>
    <div>
         <p><%= image_tag(post.image) %></p>
    </div>
    <div>
        <p><%= post.content %></p>
    </div>
<% end %>
