<div class="text-center">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="form-group">
        <%= f.label :プロフィール画像 %> <br />
        <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar" %>
      </div>
      
      <div class="form-group">
        <%= f.label :ユーザネーム %> <br />
        <%= f.text_field :name, :placeholder =>"ユーザネーム", autofocus: true, autocomplete: "name", class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :placeholder =>"Eメール", autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, :placeholder =>"パスワード", autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上のパスワードを入力してください</em>
        <% end %>
      </div>
    
      <div class="form-group">
        <%= f.label :確認用パスワード %><br />
        <%= f.password_field :password_confirmation, :placeholder =>"確認用パスワード", autocomplete: "new-password", class: 'form-control' %>
      </div>
      
    
      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

<h3>アカウント削除</h3>

<p>Unhappy? <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
